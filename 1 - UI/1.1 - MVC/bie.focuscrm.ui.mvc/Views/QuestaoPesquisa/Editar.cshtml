@model bie.focuscrm.ui.viewmodel.QuestaoPesquisaViewmodel


@{
    ViewBag.Title = "Editar Questão";
    ViewBag.HeaderText = ViewBag.Title;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("editar", "questaopesquisa", FormMethod.Post, new { @id = "frmMain", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.id_pesquisa, htmlAttributes: new { @value = Model.id_pesquisa })

    @Html.HiddenFor(model => model.id_questaopesquisa, htmlAttributes: new { @value = Model.id_questaopesquisa })

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Dados da Questão</h3>
            </div>

            <div class="panel-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.id_pesquisa, htmlAttributes: new { @value = Model.id_pesquisa })


                    <div class="form-group">
                        @Html.LabelFor(model => model.Ordem, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Ordem, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Ordem, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Valores, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Valores, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Valores, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>

            <div class="panel-body">
                <div class="col-sm-6 col-sm-offset-3 text-right btn-container">
                    <button type="submit" class="btn btn-space btn-primary">Salvar</button>

                    <a href="@Url.Action("index", "questaopesquisa", new { id = Request.Params["id_pesquisa"] })" class="btn btn-space btn-default">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

}
