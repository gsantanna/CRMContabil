@model bie.focuscrm.ui.viewmodel.FilialViewmodel


@{
    ViewBag.Title = "Adicionar Filial";
    ViewBag.HeaderText = ViewBag.Title;

    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("criar", "filial", FormMethod.Post, new { @id = "frmMain", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.id_empresa, htmlAttributes: new { @value = Model.id_empresa })
    @Html.HiddenFor(model => model.RespostaWS)

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Dados da Filial</h3>
            </div>

            <div class="panel-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.CNPJ, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.CNPJ, new { htmlAttributes = new { @class = "form-control", @style = "width:410px;display:inline;" } })

                            <button type="button" class="btn btn-default" style="display:inline;" onclick="pesquisar();"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>Pesquisar CNPJ</button>

                            @Html.ValidationMessageFor(model => model.CNPJ, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RazaoSocial, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.RazaoSocial, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.RazaoSocial, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OBS, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.OBS, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.OBS, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Logradouro, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Logradouro, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Logradouro, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Complemento, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Complemento, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Bairro, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UF, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.DropDownList("UF",
                               new SelectList(bie.mvc.utilities.Estados.get),
                               "-Selecione-",
                               new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UF, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CEP, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.CEP, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.CEP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "control-label col-md-3 ", @style = "" })
                        <div class="col-sm-6">
                            @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", @style = "" } })
                            @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                <div class="col-sm-6 col-sm-offset-3 text-right btn-container">
                    <button type="submit" class="btn btn-space btn-primary">Salvar</button>

                    <a href="@Url.Action("index", "filial", new { id = Request.Params["id_empresa"] })" class="btn btn-space btn-default">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal -->
<div class="modal fade" id="mdErro" tabindex="-1" role="dialog" aria-labelledby="mdErroLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="mdConfirmDeleteLabel">CNPJ não localizado</h4>
            </div>
            <div class="modal-body">
                O CNPJ informado não foi localizado. Por favor, verifique o número informado e tente pesquisar novamente.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {

@Scripts.Render("~/bundles/jqueryval")

}


<script type="text/javascript">
    var pesquisar = function () {
        if ($('#CNPJ').val() == '' || $('#CNPJ').val() == undefined)
            return false;

        $.ajax({
            url: '@Url.Content("~/filial/pesquisarcnpj")',
            dataType: "json",
            type: "POST",
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({ cnpjsujo: $("#CNPJ").val() }),
            async: true,
            processData: false,
            cache: false,
            success: function (data) {
                if (data['data']['status'] != 'OK') {
                    $('#mdErro').modal({ backdrop: 'static', keyboard: false });

                    return false;
                }

                $("#Nome").val(data['data']['fantasia']);
                $("#RazaoSocial").val(data['data']['nome']);
                $("#Logradouro").val(data['data']['logradouro']);
                $("#Numero").val(data['data']['numero']);
                $("#Complemento").val(data['data']['complemento']);
                $("#Bairro").val(data['data']['bairro']);
                $("#Cidade").val(data['data']['municipio']);
                $("#UF").val(data['data']['uf']);
                $("#CEP").val(data['data']['cep']);
                $("#Telefone").val(data['data']['telefone']);

                $("#RespostaWS").val(JSON.stringify(data));
            },
            error: function (xhr) {
                alert('Erro ao efetuar o comando no servidor. Verifique se o usuário possui as permissões adequadas e tente novamente');
            }
        });
    }//pesquisar
</script>